{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "shared/**/*",
    "web/**/*",
    "admin/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "hosting",
    "functions",
    "old",
    "firestore"
  ]
}
